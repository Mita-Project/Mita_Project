@using Project.MVCUI.Areas.SuperAdmin.Models.ViewModels;
@model RequestVM;

<link href="~/css/CenterDiv.css" rel="stylesheet" />

<div class="container">
    <div class="centered-div">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yeni Talep Oluşturma</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label>Talep Konusu</label>
                        <input id="myInput" autocomplete="off" asp-for="RequestTopic" type="text" class="form-control" placeholder="Talep Konusu">
                        <span style="color:red" asp-validation-for="RequestTopic"></span>
                    </div>
                    <div class="form-group">
                        <label>Talep Açıklaması</label>
                        <input id="myInput" autocomplete="off" asp-for="RequestDescription" type="text" class="form-control" placeholder="Talep Açıklaması">
                        <span style="color:red" asp-validation-for="RequestDescription"></span>   
                    </div>
                </div>
                <div class="card-footer">
                    <button onclick="checkInput()" type="submit" class="btn btn-primary">Talep Oluştur</button>
                    <button asp-area="SuperAdmin" asp-controller="Request" asp-action="Index" class="btn btn-primary" style="float:right">Geri</button>
                </div>
            </form>
        </div>
    </div>
</div>

