@using Project.MVCUI.Areas.SuperAdmin.Models.ViewModels;
@model RoleVM

<link href="~/css/CenterDiv.css" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="centered-div">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kullanıcı Rolü Güncelleme Ekranı</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label class="col-md-3">Rol Adı</label>
                        <input autocomplete="off" asp-for="Name" type="text" class="form-control" value="@Model.Name" placeholder="@Model.Name">
                        <span style="color:red" asp-validation-for="Name"></span>
                        @if (TempData["ExtTypeName"] != null)
                        {
                            <span style="color:red">@TempData["ExtTypeName"]</span>
                        }
                    </div>
                    <div class="form-group">
                        <label class="col-md-3">Rol Açıklaması</label>
                        <input autocomplete="off" asp-for="Role_Exp" type="text" class="form-control" value="@Model.Role_Exp" placeholder="@Model.Role_Exp">
                        <span style="color:red" asp-validation-for="Role_Exp"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Kullanıcı Rolünü Güncelle</button>
                    <button asp-area="SuperAdmin" asp-controller="Role" asp-action="Index" class="btn btn-primary" style="float:right">Geri</button>
                </div>
            </form>
        </div>
    </div>
</div>